<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:id="@+id/textView3"
        android:layout_width="237dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"

        android:text="Update Students"
        android:textColor="#1D2222"
        android:textSize="24sp"
        android:textStyle="bold" />

    <EditText
        android:id="@+id/editText2"
        android:layout_width="277dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/AddStudents"
        android:inputType="textPersonName"
        android:textSize="18sp" />

    <Button
        android:id="@+id/button"
        android:layout_marginLeft="330dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/ic_rounded_corner_button"


        android:drawableStart="@drawable/searchtn"
        android:paddingStart="20dp"
        android:layout_width="75dp"
        android:layout_height="48dp"
        />

    <EditText
        android:id="@+id/name"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/studentName"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editText7"
        android:layout_width="275dp"
        android:layout_height="57dp"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="20dp"

        android:ems="10"
        android:hint="@string/nic1"
        android:inputType="textPersonName" />


    <EditText
        android:id="@+id/editText9"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/phone"
        android:inputType="phone" />

    <EditText
        android:id="@+id/editText14"
        android:layout_width="275dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="30dp"
        android:ems="10"
        android:hint="@string/email"
        android:inputType="textEmailAddress" />

    <Button
        android:id="@+id/button4"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="230dp"
        android:layout_marginTop="30dp"
        android:background="@drawable/ic_rounded_corner_button"
        android:text="@string/Update" />

    <Button
        android:id="@+id/button2"
        android:layout_width="144dp"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:layout_marginTop="-50dp"
        android:background="@drawable/ic_rounded_corner_button"
        android:text="@string/del" />


</LinearLayout>
